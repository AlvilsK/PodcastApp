<!-- Header -->
<%= render 'shared/main_header' %>

<!-- Podcasts showpage -->
<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1><%= @podcast.title %></h1>
      <p class="description"><%= @podcast.description %></p>
      <!-- Links -->
      <% unless @podcast.itunes.blank? %>
        <a href="http://www.itunes.com/<%= @podcast.itunes %>" class="subscribe_link">iTunes</a>
      <% end %>  
      <% unless @podcast.stitcher.blank? %>
        <a href="<%= @podcast.stitcher %>" class="subscribe_link">Stitcher</a>
      <% end %>
      <% unless @podcast.podbay.blank? %>
        <a href="<%= @podcast.podbay %>" class="subscribe_link">PodBay</a>
      <% end %>
      <!--/Links -->
    </div>
  </div>
  
  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
      All Podcasts
      <span>/</span>
      <%= link_to @podcast.title, podcast_path(@podcast) %>
      <span>/</span>
      <%= @episode.title %>
    <% end %>
  </div>
  
  <div id="episode_content">
    <div class="wrapper_skinny">
        <img src="/assets/SteveJobs.jpg" alt="User Image" class="current_episode_thumbnail">
        <h2><%= @episode.title %></h2>
        <p class="description"><%= @episode.description %></p>
    </div>
  </div>
  
  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="cf">
        <%= @episodes.each do |episode| %>
          <li class="cf">
            <div class="episode_thumbnail">
              <a href="#">
                <img src="/assets/SteveJobs.jpg" alt="User Image">
              </a>
            </div>
            <div class="episode_overview">
              <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
              <p class="description"><%= truncate(episode.description, length: 160) %></p>
            </div>
          </li>
        <% end %>  
      </ul>
    </div>
  </div>
</div>
<!-- /Podcasts showpage -->

<!-- Pagination -->
<%= render 'shared/pagination' %>